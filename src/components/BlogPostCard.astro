---
import { formatDate } from '../utils/dateUtils';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
const { title, description, pubDate, heroImage, categories } = post.data;
const formattedDate = formatDate(pubDate);
const url = `/blog/${post.slug}`;

// Placeholder image if no hero image
const placeholderImage = '/images/placeholder.jpg';
const imageUrl = heroImage || placeholderImage;

const isRemote = imageUrl.startsWith('http://') || imageUrl.startsWith('https://');

// Smart srcset for Pexels, Unsplash, or fallback
function getSrcSet(url: string) {
  if (url.includes('pexels.com')) {
    return `${url}?auto=compress&w=400 400w, ${url}?auto=compress&w=800 800w, ${url}?auto=compress&w=1200 1200w`;
  } else if (url.includes('unsplash.com')) {
    return `${url}?auto=format&q=60&w=400 400w, ${url}?auto=format&q=60&w=800 800w, ${url}?auto=format&q=60&w=1200 1200w`;
  } else {
    return undefined;
  }
}
---

<article class={`card group overflow-hidden ${featured ? 'lg:col-span-2' : ''}`}>
  <a href={url} class="block" aria-label={title}>
    <div class="relative">
      <img
        src={imageUrl}
        srcset={isRemote ? getSrcSet(imageUrl) : undefined}
        sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
        alt={title}
        loading="lazy"
        width={featured ? 800 : 400}
        height={featured ? 320 : 220}
        class={`w-full object-cover transition-transform duration-300 group-hover:scale-105 ${featured ? 'h-60 md:h-72 lg:h-80' : 'h-48 md:h-56'}`}
        onerror="this.onerror=null;this.src='/images/placeholder.jpg';"
      />
      {categories.length > 0 && (
        <div class="absolute top-4 left-4">
          <span class="px-3 py-1 text-xs font-medium bg-primary-500/90 text-white rounded-full backdrop-blur-sm">
            {categories[0]}
          </span>
        </div>
      )}
    </div>
    <div class="p-5 md:p-6">
      <div class="text-sm text-gray-500 dark:text-gray-400 mb-2">{formattedDate}</div>
      <h3 class="text-xl md:text-2xl font-bold mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-200">
        {title}
      </h3>
      <p class="text-gray-600 dark:text-gray-400 line-clamp-2 mb-4">
        {description}
      </p>
      <span class="inline-flex items-center text-primary-600 dark:text-primary-400 font-medium" aria-label="Read more about this post">
        Read more
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </span>
    </div>
  </a>
</article>