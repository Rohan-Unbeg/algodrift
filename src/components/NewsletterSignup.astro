<section class="bg-gray-100 dark:bg-gray-800 rounded-2xl p-8 md:p-10">
  <div class="text-center mb-6">
    <h3 class="text-2xl font-bold mb-2">Subscribe to our Newsletter</h3>
    <p class="text-gray-600 dark:text-gray-400">
      Get the latest tech insights and tutorials delivered to your inbox.
    </p>
  </div>
  
  <form class="max-w-md mx-auto" id="newsletter-form">
    <div class="flex flex-col sm:flex-row gap-3">
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Enter your email"
        required
        class="flex-grow px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:focus:border-primary-500"
      />
      <button
        type="submit"
        class="btn btn-primary"
      >
        Subscribe
      </button>
    </div>
    <p class="text-xs text-gray-500 dark:text-gray-400 mt-3 text-center">
      By subscribing you agree to our <a href="/privacy-policy" class="underline hover:text-gray-700 dark:hover:text-gray-300">Privacy Policy</a>.
    </p>
  </form>
</section>

<script>
  // Newsletter form handling
  const form = document.getElementById('newsletter-form');
  
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // Get email
      const emailInput = form.querySelector('input[name="email"]') as HTMLInputElement;
      const email = emailInput?.value || '';
      
      if (!email) return;
      
      // Here you would typically send the email to your newsletter service
      // For demonstration, we'll just show a success message
      
      // Reset form
      form.innerHTML = `
        <div class="text-center py-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-green-500 mx-auto mb-3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h4 class="text-xl font-semibold mb-2">Thanks for subscribing!</h4>
          <p class="text-gray-600 dark:text-gray-400">Check your inbox to confirm your subscription.</p>
        </div>
      `;
    });
  }
</script>